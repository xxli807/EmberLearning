<section class="panel panel-default">
  <header class="panel-heading bg-light">
    <ul class="nav nav-tabs pull-right">
      <li class="active">
        <a href="#providerProfile" data-toggle="tab">
          <i class="fa fa-user-md text-muted"></i> Profile
        </a>
      </li>
      <li>
        <a href="#providerSettings" data-toggle="tab">
          <i class="fa fa-cog text-muted"></i> Settings
        </a>
      </li>
    </ul>
    <span class="hidden-sm">Provider Details</span>
  </header>
  <div class="panel-body">
    <div class="tab-content">
      <div class="tab-pane active" id="providerProfile">
        <form class="bs-example form-horizontal">
          <div class="form-group">
            <label class="col-lg-2 control-label">Provider Name</label>
            <div class="col-lg-10">
              <div class="row">
                <div class="col-lg-3 col-xs-6">
                  {{input type="text" value=familyName id="familyName" name="familyName" class="form-control" data-trigger="change" data-required="true" placeholder="family name"}}
                </div>
                <div class="col-lg-3 col-xs-6">
                  {{input type="text" value=givenName id="givenName" name="givenName" class="form-control" data-trigger="change" data-required="true" placeholder="given name"}}
                </div>
              </div>
              <span class="help-block m-b-none"></span>
            </div>
          </div>

          <div class="form-group">
            <label class="col-lg-2 control-label">Email</label>
            <div class="col-lg-10">
              <div class="row">
                <div class="col-lg-6">
                  {{input type="text" value=email id="email" name="email" class="form-control" data-trigger="change" data-required="true" data-type="email" placeholder="email address"}}
                </div>
              </div>
              <span class="help-block m-b-none"></span>
            </div>
          </div>

          <div class="form-group">
            <label class="col-lg-2 control-label">Phone</label>
            <div class="col-lg-10">
              <div class="row">
                <div class="col-lg-6">
                  {{input type="text" value=phone id="phone" name="phone" class="form-control" data-trigger="change" data-required="true" data-type="phone" placeholder="phone number"}}
                </div>
              </div>
              <span class="help-block m-b-none"></span>
            </div>
          </div>

          <div class="form-group">
            <label class="col-lg-2 control-label">Mobile</label>
            <div class="col-lg-10">
              <div class="row">
                <div class="col-lg-6">
                  {{input type="text" value=mobile id="mobile" name="mobile" class="form-control" data-trigger="change" data-required="true" data-type="phone" placeholder="mobile phone number"}}
                </div>
              </div>
              <span class="help-block m-b-none"></span>
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <button type="button" class="btn btn-sm btn-default btnNextStep">Next</button>
            </div>
          </div>
        </form>

      </div>
      <div class="tab-pane" id="providerSettings">
